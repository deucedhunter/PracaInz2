@model IEnumerable<PracaInz.Models.Subject>
@{
    ViewBag.Title = "Lista Przedmiotów";
}
<h2>@ViewBag.Title</h2>
<p>
    @Html.ActionLink("Nowy przedmiot", "New", "Subject", null, new { @class = "btn btn-primary" })
</p>
@if (!Model.Any())
{
    <p>Nie mamy żadnych przedmiotów w bazie.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Nazwa</th>
                <th>Akcja</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subject in Model)
            {
                <tr>
                    <td>
                        @subject.Name
                    </td>
                    <td>
                        @Html.ActionLink("Szczegóły", "Details", "Subject", new { id = subject.Id }, null) | 
                        @Html.ActionLink("Edytuj", "Edit", "Subject", new { id = subject.Id }, null) |
                        @Html.ActionLink("Usuń", "Delete", "Subject", new { id = @subject.Id }, new { @class = "btn-link" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
